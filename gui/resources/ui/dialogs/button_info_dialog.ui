<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1.0"/>
  <object class="AdwWindow" id="button_info_dialog">
    <property name="title">Action Info</property>
    <property name="icon-name">xero-toolkit</property>
    <property name="default-width">600</property>
    <property name="default-height">500</property>
    <property name="modal">true</property>
    <property name="content">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="show-title">true</property>
            <property name="show-end-title-buttons">true</property>
          </object>
        </child>
        <property name="content">
          <object class="GtkBox" id="info_root_box">
            <property name="orientation">vertical</property>
            <property name="spacing">16</property>
            <property name="margin-top">20</property>
            <property name="margin-bottom">20</property>
            <property name="margin-start">20</property>
            <property name="margin-end">20</property>
            <child>
              <object class="GtkScrolledWindow" id="info_scroller">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="hscrollbar-policy">never</property>
                <child>
                  <object class="GtkBox" id="info_content_box">
                    <property name="orientation">vertical</property>
                    <property name="spacing">14</property>
                    <child>
                      <object class="GtkBox" id="info_title_row">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">12</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkImage" id="info_title_icon">
                            <property name="icon-name">info-circle-symbolic</property>
                            <property name="pixel-size">40</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="info_title_label">
                            <property name="label">Action Info</property>
                            <property name="xalign">0.5</property>
                            <property name="justify">center</property>
                            <property name="halign">center</property>
                            <property name="wrap">true</property>
                            <style>
                              <class name="title-2"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="info_subtitle_label">
                        <property name="label">Action details and notes</property>
                        <property name="xalign">0.5</property>
                        <property name="justify">center</property>
                        <property name="halign">center</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="info_summary_card">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">10</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <style>
                          <class name="card"/>
                        </style>
                        <child>
                          <object class="GtkBox" id="info_summary_content">
                            <property name="orientation">horizontal</property>
                            <property name="spacing">10</property>
                            <property name="margin-top">12</property>
                            <property name="margin-bottom">12</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <child>
                              <object class="GtkImage" id="info_summary_icon">
                                <property name="icon-name">circle-question-symbolic</property>
                                <property name="pixel-size">20</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="info_summary_label">
                                <property name="label">Summary</property>
                                <property name="xalign">0</property>
                                <property name="wrap">true</property>
                                <property name="wrap-mode">word-char</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="info_details_header_row">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">8</property>
                        <property name="margin-top">4</property>
                        <child>
                          <object class="GtkImage" id="info_details_icon">
                            <property name="icon-name">bars-symbolic</property>
                            <property name="pixel-size">16</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="info_details_title">
                            <property name="label">Details</property>
                            <property name="xalign">0</property>
                            <style>
                              <class name="title-4"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkFrame" id="info_details_frame">
                        <property name="hexpand">true</property>
                        <style>
                          <class name="view"/>
                        </style>
                        <child>
                          <object class="GtkBox" id="info_details_box">
                            <property name="orientation">vertical</property>
                            <property name="spacing">8</property>
                            <property name="margin-top">12</property>
                            <property name="margin-bottom">12</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="info_caution_header_row">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">8</property>
                        <property name="margin-top">4</property>
                        <child>
                          <object class="GtkImage" id="info_caution_header_icon">
                            <property name="icon-name">asterisk-symbolic</property>
                            <property name="pixel-size">16</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="info_caution_title">
                            <property name="label">Caution</property>
                            <property name="xalign">0</property>
                            <style>
                              <class name="title-4"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="info_caution_card">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">10</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <style>
                          <class name="card"/>
                        </style>
                        <child>
                          <object class="GtkBox" id="info_caution_content">
                            <property name="orientation">horizontal</property>
                            <property name="spacing">10</property>
                            <property name="margin-top">12</property>
                            <property name="margin-bottom">12</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <child>
                              <object class="GtkImage" id="info_caution_icon">
                                <property name="icon-name">triangle-exclamation-symbolic</property>
                                <property name="pixel-size">18</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="info_caution_label">
                                <property name="label">Caution text</property>
                                <property name="xalign">0</property>
                                <property name="wrap">true</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="info_actions_box">
                <property name="orientation">horizontal</property>
                <property name="halign">center</property>
                <child>
                  <object class="GtkButton" id="info_close_button">
                    <property name="label">Close</property>
                    <property name="width-request">120</property>
                    <style>
                      <class name="pill"/>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </object>
</interface>
